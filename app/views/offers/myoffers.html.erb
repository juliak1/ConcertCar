
<div class="contents">
	<div class="container">
		<h3>My Offers <small class="pull-right"><%= @offers.count %> total</small></h3>
		<table class="table table-striped">
			<thread>
				<tr>
					<th class="text-center">Status</th>
					<th>Concert</th>
					
					<th>Price</th>
					<th class="text-center">Proposals</th>
					<th colspan="3"></th>
				</tr>
			</thread>
			<tbody>
				<% @offers.each do |offer| %>
				<tr>
					<td>
						<% if offer.open %>
						Open
						<%else%>
						Closed
						<%end%>
					</td>
					<td><%= link_to offer.concert, offer %></td>
					<td><%= number_to_currency(offer.price, precision: 0) %></td>
					<td class="text-center"><%= offer.proposals.count %></td>
					<td><%= link_to "Edit", edit_offer_path(offer) %></td>
					<td><%= link_to "Delete", offer, method: :delete, data: { confirm: "Are you sure?"} %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>