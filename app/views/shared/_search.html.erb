<div class="row">
  <div class="col-sm-12 col-md-12 text-center status">
    <h1>We currently have <span class="orange"> <%= @offers.total_count %></span> offers
    </h1>
  </div>
</div> <!-- end h1 header status row -->
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 text-center search">
    <%= form_tag search_offers_path, method: :get do |f| %>
    <%= text_field_tag :search, nil, placeholder: "", class: "col-md-9" %>
    <%= submit_tag "Search", class: "col-md-3 btn btn-warning" %>
    <% end %>
  </div>
</div> <!-- end search row -->
