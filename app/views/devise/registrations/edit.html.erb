<div class="container" id="edit-form">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h2 class="text-center">Edit</h2>



<%= bootstrap_form_for(resource, 
                       :as => resource_name, 
                       :url => user_registration_path) do |f| %>

  <%= f.text_field :name, 
             placeholder: 'first and last name (will be shown publicly)', 
             class: 'form-control' %>
  <%= f.text_field :email, 
             placeholder: 'email', 
             class: 'form-control' %>
  <%= f.password_field :password, 
                       placeholder: 'new password', 
                       class: 'form-control' %>
  <%= f.password_field :password_confirmation, 
                       placeholder: 'new password confirmation', 
                       class: 'form-control' %>

  <%= f.password_field :current_password, 
                       placeholder: 'we need your current password to confirm your changes', 
                       class: 'form-control' %>
 <%= f.submit 'Update', class: 'btn sign-up-button' %>

<% end %>



<h4 class="text-center">Delete my account</h4>

<p>Unhappy? <%= link_to "Delete my account",  registration_path(resource_name),  data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default navbar-btn"  %></p>

<%= link_to "Back", :back %>

  </div>
  </div>
</div>