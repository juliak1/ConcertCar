<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h2 class="text-center">Sign up</h2>
<%= bootstrap_form_for(resource, 
                       :as => resource_name, 
                       :url => user_registration_path) do |f| %>

  <%= f.text_field :name, 
             placeholder: 'first and last name (will be shown publicly)', 
             class: 'form-control' %>
  <%= f.text_field :email, 
             placeholder: 'email', 
             class: 'form-control' %>
  <%= f.password_field :password, 
                       placeholder: 'password', 
                       class: 'form-control' %>
  <%= f.password_field :password_confirmation, 
                       placeholder: 'password confirmation', 
                       class: 'form-control' %>
            
            <%= recaptcha_tags %>
           <div class="error"> <%= flash[:recaptcha_error] %> </div>
  <%= f.submit 'Sign up', class: 'btn sign-up-button' %>
<% end %>

<%= render "devise/shared/links" %>
  </div>
  </div>
</div>